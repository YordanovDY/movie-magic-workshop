<section id="attachCast">
    <div class="attachCastSection">
        <h1>Attach New Cast</h1>
        <div class="attach-form">
            <h2>{{movie.title}}</h2>
            <img class="movie" src="{{movie.imageUrl}}">
            <form method="POST">
                <label for="cast">Cast</label>
                <select id="cast" name="cast">
                    <option value="none" selected>--------</option>
                    {{#each casts}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>

                <div style="display: flex;">
                    <label style="flex: 0 0 30%;" for="name-in-movie">Name in Movie:</label>
                    <input style="flex: 0 0 50%;" type="text" class="inputFields" id="name-in-movie" name="" />
                </div>

                <div id="center-btn">
                    <button id="create-btn">Add Cast</button>
                </div>
            </form>
        </div>
    </div>
</section>